<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/android"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/base_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <Button
        android:text="REZERVIRAJ TERMIN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="66dp"
        android:id="@+id/reservation_btn" />

    <TextView
        android:text="Kontakt:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewKontakt"
        android:layout_below="@+id/textViewAdress"
        android:layout_marginTop="27dp" />

    <TextView
        android:text="Radno vrijeme:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewRadnoVrijeme"
        android:layout_marginBottom="101dp"
        android:layout_above="@+id/reservation_btn"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Adresa:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewAdress"
        android:layout_above="@+id/textViewRadnoVrijeme"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:id="@+id/textViewName"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <com.google.android.gms.maps.MapView
        android:layout_below="@+id/textViewName"
        android:id="@+id/mapViewPlace"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


</RelativeLayout>