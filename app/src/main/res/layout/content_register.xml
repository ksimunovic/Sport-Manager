<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/content_register"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.foi.air1603.sport_manager.RegisterActivity"
        tools:showIn="@layout/app_bar_register">

        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="17dp"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/txiMailR">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/etMail"
                android:hint="@string/e_mail" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txiMailR"
            android:layout_alignEnd="@+id/txiMailR"
            android:layout_marginBottom="17dp"
            android:id="@+id/txiUsernameR">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/etUsernameR"
                android:hint="@string/korisnicko_imeR" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txiUsernameR"
            android:layout_alignStart="@+id/txiUsernameR"
            android:layout_marginBottom="17dp"
            android:id="@+id/txiPasswordR">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/etPasswordR"
                android:hint="@string/lozinkaR" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txiPasswordR"
            android:layout_alignStart="@+id/txiPasswordR"
            android:layout_marginBottom="17dp"
            android:id="@+id/txiPasswordR1">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/etPasswordR1"
                android:hint="@string/ponovite_lozinkuR" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txiPasswordR1"
            android:layout_alignStart="@+id/txiPasswordR1"
            android:layout_marginBottom="17dp"
            android:id="@+id/txiImeR">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/etName"
                android:hint="@string/imeR" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txiImeR"
            android:layout_alignStart="@+id/txiImeR"
            android:layout_marginBottom="17dp"
            android:id="@+id/txiPrezimeR">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/etLastName"
                android:hint="@string/prezimeR" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txiPrezimeR"
            android:layout_alignStart="@+id/txiPrezimeR"
            android:layout_marginBottom="17dp"
            android:id="@+id/txiAdresaR">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/etAddress"
                android:hint="@string/adresaR" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txiAdresaR"
            android:layout_alignStart="@+id/txiAdresaR"
            android:layout_marginBottom="30dp"
            android:id="@+id/txiBrojTelefonaR">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/etPhoneNumber"
                android:hint="@string/broj_telefonaR" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:text="@string/registracijaR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bRegistracija"
            android:layout_marginBottom="30dp"
            android:layout_below="@+id/txiBrojTelefonaR"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
</ScrollView>