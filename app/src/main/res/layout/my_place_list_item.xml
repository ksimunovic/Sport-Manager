<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="155dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:selectableItemBackground"
    card_view:cardElevation="3dp"
    android:clipToPadding="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/background">

        <TextView
            android:id="@+id/my_place_name"
            android:textSize="20sp"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingTop="4dp"
            android:textIsSelectable="false"
            tools:text="Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/my_place_image"
            android:layout_height="90dp"
            android:layout_width="110dp"
            android:src="@mipmap/ic_launcher"
            android:paddingTop="4dp"
            android:layout_marginEnd="8dp"
            android:layout_alignParentEnd="true" />

        <TextView
            android:textSize="14sp"
            android:id="@+id/my_place_address"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:textIsSelectable="false"
            android:paddingStart="8dp"
            tools:text="Address"
            android:textAppearance="@style/TextAppearance.StatusBar.EventContent.Info"
            android:layout_above="@+id/btn_my_place_add_appointment"
            android:layout_alignParentStart="true" />

        <Button
            android:text="Dodaj termin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_my_place_add_appointment"
            android:layout_below="@+id/my_place_image"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp" />

        <Button
            android:text="Rezervirani termini"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_my_place_reserved"
            android:layout_marginStart="11dp"
            android:layout_below="@+id/my_place_image"
            android:layout_toEndOf="@+id/btn_my_place_add_appointment" />

    </RelativeLayout>

</android.support.v7.widget.CardView>